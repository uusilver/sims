<?xml version="1.0" encoding="UTF-8"?>
<!-- !DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd"> -->
<web-app  version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
 http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
>
	<display-name>Framework</display-name>
	<description>Framework Web Application</description>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>framework</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/log4j.properties</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/applicationContext-hibernate.xml
			/WEB-INF/applicationContext-framework.xml
			/WEB-INF/boXml/mss/mss-bo.xml
			/WEB-INF/boXml/mss/framework-bo.xml
			/WEB-INF/daoXml/mss/framework-dao.xml
			/WEB-INF/daoXml/mss/mss-dao.xml
			<!-- /WEB-INF/schedulingContext-timer.xml  -->
		</param-value>
	</context-param>
	<filter>
		<filter-name>SetCharacterEncoding</filter-name>
		<filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>LoginTokenFilterMss</filter-name>
		<filter-class>
			com.tmind.framework.pub.filter.LoginTokenFilterMss
		</filter-class>
		<init-param>
			<param-name>loginPageUrl</param-name>
			<param-value>login.jsp</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>hibernateFilter</filter-name>
		<filter-class>
			com.tmind.framework.pub.filter.OpenSessionInViewFilter
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SetCharacterEncoding</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SetCharacterEncoding</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>LoginTokenFilterMss</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>LoginTokenFilterMss</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>LoginTokenFilterMss</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>hibernateFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>hibernateFilter</filter-name>
		<url-pattern>*.back</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>hibernateFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>
			com.tmind.framework.pub.web.FrameworkListener
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.springframework.web.util.Log4jConfigListener
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	<servlet>
		<servlet-name>framework</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				/WEB-INF/framework-servlet.xml
				/WEB-INF/controllerXml/mss/mss-controller.xml
				/WEB-INF/controllerXml/mss/interfaces-controller.xml
				/WEB-INF/controllerXml/mss/base-controller.xml
			</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>initMapForOrgAreaDesc</servlet-name>
		<servlet-class>
			com.tmind.mss.pub.servlet.InitMapForOrgAreaDesc
		</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>DisplayChart</servlet-name>
		<servlet-class>
			org.jfree.chart.servlet.DisplayChart
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>framework</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>framework</servlet-name>
		<url-pattern>*.back</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>framework</servlet-name>
		<url-pattern>*.sms</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DisplayChart</servlet-name>
		<url-pattern>/servlet/DisplayChart</url-pattern>
	</servlet-mapping>

	<session-config>
		<session-timeout>1800</session-timeout>
	</session-config>
	<mime-mapping>
		<extension>wav</extension>
		<mime-type>audio/x-wav</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>asf</extension>
		<mime-type>video/x-ms-asf</mime-type>
	</mime-mapping>
	<welcome-file-list>
		<welcome-file>index.htm</welcome-file>
	</welcome-file-list>
	<jsp-config>
	<taglib>
		<taglib-uri>/WEB-INF/pub.tld</taglib-uri>
		<taglib-location>/WEB-INF/pub.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
		<taglib-location>/WEB-INF/c.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>http://java.sun.com/jsp/jstl/fn</taglib-uri>
		<taglib-location>/WEB-INF/fn.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>http://java.sun.com/jsp/jstl/fmt_rt</taglib-uri>
		<taglib-location>/WEB-INF/fmt-1_0-rt.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/springForm</taglib-uri>
		<taglib-location>
			/WEB-INF/queryXml/spring-form.tld
		</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/pub/dividePagingDis.tld</taglib-uri>
		<taglib-location>
			/WEB-INF/queryXml/dividePagingDis.tld
		</taglib-location>
	</taglib>

	</jsp-config>
</web-app>
