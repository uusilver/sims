							<value>com/xwtech/mss/pub/po/ClientGateway.hbm.xml</value>
							<value>com/xwtech/mss/pub/po/City.hbm.xml</value>
							<value>com/xwtech/mss/pub/po/ClientStatus.hbm.xml</value>
